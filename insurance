<body>

  <div class="form-container">
    <h2>Mobile Insurance Form</h2>
    <form id="insuranceForm">
      <input type="text" name="name" placeholder="Full Name" required>
      <input type="text" name="mobile" placeholder="Mobile Number" required>
      <input type="email" name="email" placeholder="Email Address" required>
      <input type="text" name="insurance" placeholder="Insurance Type (e.g. Screen, Theft)" required>
      <button type="submit">Submit</button>
    </form>
    <div class="msg" id="msg"></div>
  </div>

  <script>
    const form = document.getElementById("insuranceForm");
    const msg = document.getElementById("msg");

    form.addEventListener("submit", function(e){
      e.preventDefault();

      let data = {
        name: this.name.value,
        mobile: this.mobile.value,
        email: this.email.value,
        insurance: this.insurance.value
      };

      fetch("YOUR_GOOGLE_SCRIPT_URL", {   // üëà ‡§Ø‡§π‡§æ‡§Å ‡§Ö‡§™‡§®‡§æ Apps Script URL ‡§°‡§æ‡§≤‡§®‡§æ ‡§π‡•à
        method: "POST",
        body: JSON.stringify(data)
      })
      .then(res => res.json())
      .then(res => {
        if(res.status === "success"){
          msg.style.color = "green";
          msg.innerText = "‚úÖ Data saved successfully!";
          form.reset();
        } else {
          msg.style.color = "red";
          msg.innerText = "‚ùå Failed to save data!";
        }
      })
      .catch(err => {
        msg.style.color = "red";
        msg.innerText = "‚ö†Ô∏è Error: " + err;
      });
    });
  </script>

